<% cache @admin + '-' + @filter + '-home' do %>
  <% Rails.cache.remember 'views/' + @admin + '-' + @filter + '-home' %>
  <% Rails.cache.remember 'views/' + @admin.gsub('admin-', '') + '-' + @filter + '-home' %>
  <% Rails.cache.remember 'views/' + request.original_url.gsub(/https?\:\/\//, '') %>
  <script type="text/javascript">
  <!--
    var count = <%= @count %>;
    var latest = '<%= @last %>';
    var filter = '<%= @filter %>';
    var seen = <%=raw @shown_stats.to_json %>;
  -->
  </script>

  <div class="post-list posts">
    <% if @posts.length > 0 %>
      <%=raw render('filter_posts').gsub(/\n/, '') %>
      <div class="inview"></div>
    <% else %>
      <%= render 'not_found' %>
    <% end %>
  </div>
<% end %>

<div class="post id-<%= @post.id %>">
  <div class="flag"><%= link_to 'Flag', flag_path(@post), :confirm => 'Flag this?' %></div>
  <div class="name-loc"><%= @post.name %>, <%= @post.state %></div>
  <div class="share">Facebook coming...</div>
  <div class="image"><%= image_tag @post.image(:gallery) %></div>
  <div class="adopt-me">Adopt Bunny at <%= link_to @post.name + ', ' + @post.state, 'http://www.petfinder.com/awo/index.cgi?location=' + @post.state + '&keyword=' + @post.shelter %></div>
</div>
<% if flash[:message] %><div><p class="message"><%= h flash[:message] %></p></div><% end %>
<% if flash[:error] %><div><p class="error"><%= h flash[:error] %></p></div><% end %>

<div class="gate">
  <header>
    <img class="logo-ds" src="/images/logo-ds.png" alt="DoSomething.org logo">
    <h1>Pics for Pets</h1>
    <h2>Over half of the <strong>5 to 7 million</strong> pets that enter shelters are put to sleep. Help save their lives just by hitting “share.”</h2>
  </header>

  <aside>
    <h1>how it works</h1>
    <ol>
      <li>Browse our gallery of animals who need homes</li>
      <li>Share your favorites with friends to earn food and toys for the animals</li>
      <li>Visit your local shelter to take photos for a chance to win a $3,000 scholarship</li>
    </ol>
  </aside>

  <%= form_for(:session, :url => sessions_path, :html => { :class => 'form form-login', :id => 'login-form' }) do |f| %>
    <div class="facebook-connect"><%= link_to image_tag('/images/facebook.png'), '/auth/facebook' %></div>
    <%= link_to image_tag('/images/facebook.png'), '/auth/facebook' %>
    <%= f.label 'Email / User name' %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit 'submit', :name => 'form', :value => 'login', :class => 'btn primary large primary' %>
    <p>Not a DoSomething.org member? <%= link_to 'register', '#', { :id => 'registration-link' } %></p>
  <% end %>

  <%= simple_form_for(:session, :url => sessions_path, :html => { :class => 'form form-registration right', :id => 'registration-form' }) do |f| %>
    <div class="facebook-connect"><%= link_to image_tag('/images/facebook.png'), '/auth/facebook' %></div>
    <%= f.input :first, wrapper_html: { class: 'form-item-first-name' } %>
    <%= f.input :last, wrapper_html: { class: 'form-item-last-name' } %>
    <%= f.input :email, wrapper_html: { class: 'form-item-email' } %>
    <%= f.input :cell, wrapper_html: { class: 'form-item-cell' } %>
    <%= f.input :password, wrapper_html: { class: 'form-item-pass' } %>
    <%= f.label 'birthday' %>
    <%= f.input :month, label: false, placeholder: 'MM', wrapper_html: { class: 'form-item-month' } %>
    <%= f.input :day, label: false, placeholder: 'DD', wrapper_html: { class: 'form-item-day' } %>
    <%= f.input :year, label: false, placeholder: 'YYYY', wrapper_html: { class: 'form-item-year' } %>
    <%= f.submit 'submit', :name => 'form', :value => 'register', :class => 'btn primary large' %>
    <p>Already have an account? <%= link_to 'log in', '#', { :id => 'login-link' } %></p>
  <% end %>

  <footer>
    <p>
      Clicking "Finish" won't sell your soul, but it means you agree to our <a href="http://www.dosomething.org/about/terms-of-service">terms of service</a> &amp; <a href="http://www.dosomething.org/about/privacy">privacy policy</a> &amp; to receive our weekly update.
    </p>
  </footer>
</div>

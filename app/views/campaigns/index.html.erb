<h1>Listing campaigns</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Path</th>
    <th>Lead</th>
    <th>Lead email</th>
    <th>Developers</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @campaigns.each do |campaign| %>
  <tr>
    <td><%= campaign.title %></td>
    <td><%= campaign.start_date %></td>
    <td><%= campaign.end_date %></td>
    <td><%= campaign.path %></td>
    <td><%= campaign.lead %></td>
    <td><%= campaign.lead_email %></td>
    <td><%= campaign.developers %></td>
    <td><%= link_to 'Show', campaign.path %></td>
    <% if admin? %><td><%= link_to 'Edit', edit_campaign_path(campaign) %></td><% end %>
  </tr>
<% end %>
</table>